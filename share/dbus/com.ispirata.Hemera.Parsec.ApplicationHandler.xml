<!DOCTYPE node PUBLIC "-//freedesktop//DTD D-BUS Object Introspection 1.0//EN" "http://www.freedesktop.org/standards/dbus/1.0/introspect.dtd">
<node>
  <interface name="com.ispirata.Hemera.Parsec.ApplicationHandler">
    <method name="LaunchOrbitAsSatellite">
      <arg type="s" direction="in" />
    </method>
    <method name="ShutdownSatellite">
      <arg type="s" direction="in" />
    </method>
    <method name="ShutdownAllSatellites" />

    <method name="ActivateSatellites">
      <arg type="as" direction="in" />
    </method>
    <method name="DeactivateSatellites">
      <arg type="as" direction="in" />
    </method>
    <method name="DeactivateAllSatellites" />

    <method name="SetActivationPolicies">
      <arg type="u" direction="in" />
    </method>
  </interface>
</node>
